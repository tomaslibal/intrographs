{
  "name": "intrographs",
  "version": "0.0.0",
  "private": true,
  "jsnext:main": "./src/main.js",
  "scripts": {
    "server": "python -m SimpleHTTPServer 8080",
    "firefox": "which firefox; if [ $? -eq 0 ]; then firefox http://localhost:8080/; else echo 'Error! Firefox not found'; fi",
    "browserify": "node_modules/browserify/bin/cmd.js -e dist/out.raw.js -o dist/out.js",
    "minify": "",
    "build": "npm run clear && mkdir -p dist && BABEL_ENV=build node dev/buildAndConcat.js && npm run browserify",
    "clear": "rm -rf build && rm -rf dist",
    "test": "BABEL_ENV=development ./node_modules/mocha/bin/mocha --compilers js:babel/register --recursive",
    "sloccount": " node_modules/cloc/lib/cloc docs html src test",
    "install-all": "npm install && bower install"
  },
  "devDependencies": {
    "babel": "^5.8.21",
    "babel-core": "^5.8.25",
    "babel-plugin-rewire": "^0.1.22",
    "browserify": "^11.0.1",
    "chai": "^3.2.0",
    "cloc": "^1.0.4",
    "mocha": "^2.1.0",
    "rollup": "^0.20.0",
    "rollup-plugin-babel": "^1.0.0",
    "sinon": "^1.16.1"
  }
}
