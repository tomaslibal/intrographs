<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="eu.libal.intrographs.presentation.controllers.NewGraphDialogController">
    <GridPane fx:id="mainGrid">
        <padding>
            <Insets left="10.0" top="10.0" right="10.0" bottom="10.0"/>
        </padding>
        <hgap>10</hgap>
        <vgap>10</vgap>

        <Text GridPane.rowIndex="0">Choose a graph</Text>

        <!--<Button GridPane.rowIndex="1">From Transition Matrix</Button>-->

        <Button GridPane.rowIndex="2" onAction="#newGraphFromAdjMatrix">From Adjacency Matrix</Button>

        <Button GridPane.rowIndex="3" onAction="#newEmptyGraph">Empty</Button>

        <!--<Line GridPane.rowIndex="4" startX="0" startY="-30" endX="100" endY="-30"/>-->

        <Button GridPane.rowIndex="4" onAction="#cancelNewGraph">Cancel</Button>

    </GridPane>
</VBox>
